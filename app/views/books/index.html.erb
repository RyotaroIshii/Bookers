<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td><td><%= book.body %></td>
     <td><%= link_to 'Show', "/books/#{book.id}" %></td>
     <td><%= link_to 'Edit', "/books/#{book.id}/edit" %></td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="field">
  <label for="book_title">Title</label><br>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create book' %>
  </div>
  <% end %>